<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GestionHotelero.Presentacion</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.lineicons.com/4.0/lineicons.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GestionHotelero.Presentacion.styles.css" asp-append-version="true" />
</head>
<body >
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3 navbar navbar-light" style="background-color:#e7e6e6;">
            <div class="container-fluid">
                <a class="navbar-brand " asp-area="" asp-controller="Home" asp-action="Index"><img src="~/assets/logo.png" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" style="color:#592826; font-family:Cambria; font-weight:600" asp-area="" asp-controller="Home" asp-action="Index">Inicio</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" style="color:#592826; font-family:Cambria; font-weight:600" asp-area="" asp-controller="Home" asp-action="Privacy">Privacidad</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" style="color:#592826; font-family:Cambria; font-weight:600" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Transacciones
                            </a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" style="color:#592826; font-family:Cambria; font-weight:500" href="#">Action</a></li>
                                <li><a class="dropdown-item" style="color:#592826; font-family:Cambria; font-weight:500" href="#">Another action</a></li>
                                <li><a class="dropdown-item" style="color:#592826; font-family:Cambria; font-weight:500" href="#">Something else here</a></li>
                            </ul>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" style="color:#592826; font-family:Cambria; font-weight:600" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">Mantenimientos</a>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" style="color:#825592826FA5; font-family:Cambria; font-weight:500" asp-area="" asp-controller="Clientes" asp-action="Index">Clientes</a></li>
                                <li><a class="dropdown-item" style="color:#592826; font-family:Cambria; font-weight:500" href="#">Empleados</a></li>
                                <li><a class="dropdown-item" style="color:#592826; font-family:Cambria; font-weight:500" href="#">Habitaciones</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <partial name="_LoginPartial.cshtml" />
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Hotel & Spa La Salve</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
