@using GestionHotelero.DataAccess;
@using Microsoft.AspNetCore.Identity

@inject SignInManager<GestionHoteleroIdentityUser> SignInManager
@inject UserManager<GestionHoteleroIdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a id="manage" class="nav-link text-primary fw-bold" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hola @UserManager.GetUserAsync(User).Result!.Nombre!</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-primary border-0 fw-bold">Cerrar Sesion</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-primary fs-6 fw-bold" id="register" asp-area="Identity" asp-page="/Account/Register">Registrar</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-primary fw-bold" id="login" asp-area="Identity" asp-page="/Account/Login">Ingresar</a>
        </li>
    }
</ul>
